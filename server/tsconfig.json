{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ES2022",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "jest.config.ts"],
  "exclude": ["node_modules"]
}
